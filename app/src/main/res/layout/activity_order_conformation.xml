<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".order_conformation"
    android:background="@color/black">

    <include
        android:id="@+id/toolbar1"
        layout="@layout/toolbar1"
        android:layout_width="match_parent"
        android:layout_height="44dp" />

    <LinearLayout
        android:id="@+id/silder"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/toolbar1"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/smallwhite"
        android:orientation="horizontal"
        >


        <ImageView
            android:id="@+id/v_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/button_design_1"
            android:src="@drawable/motorbike"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="50dp"
            android:padding="5dp"
            >

            <TextView
                android:id="@+id/vechiel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/v_logo"
                android:text="TN - 47 - AM - 9553 "
                android:padding="5dp"
                android:textColor="#000000"
                android:fontFamily="@font/roboto_medium"/>

            <TextView
                android:id="@+id/bike_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/vechiel"
                android:text="HONDA SHINE "
                android:padding="5dp"
                android:textColor="#000000"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/roboto_black"/>
        </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/change_bike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/silder"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Change Bike"
        android:textColor="#B60404"
        android:textSize="12dp" />

    <LinearLayout
        android:id="@+id/services_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/change_bike"
        android:padding="5dp"
        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:background="@color/white"
            android:src="@drawable/technics"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/s_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full body service"
                android:textColor="#B60303"
                android:fontFamily="@font/roboto_black"
                android:layout_marginStart="20dp"/>
            <TextView
                android:id="@+id/s_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹ 1,768 only"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/roboto_black"
                android:layout_marginStart="20dp"/>


        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/lnr2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/services_name"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/smallwhite"
        android:orientation="vertical"
        android:padding="10dp">

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radioButton"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:text="Take away" />

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:text="Delivery to address" />


        </RadioGroup>


    </LinearLayout>

    <TextView
        android:id="@+id/tv_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lnr2"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/roboto_black"
        android:text="Description"
        android:textColor="#A80303"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/o_desc"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/tv_des"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/button_design_2"
        android:gravity="top"
        android:hint="Enter your description"
        android:paddingStart="8dp"
        android:textColor="@color/white">

    </EditText>

    <Button
        android:id="@+id/order_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="630dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/button_1"
        android:fontFamily="@font/roboto_black"
        android:text="Order"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16dp" />

</RelativeLayout>